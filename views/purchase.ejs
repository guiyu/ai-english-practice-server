<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= i18n.t('purchase.title') %></title>
    <link rel="stylesheet" href="/css/style.css">
    <script src="https://js.stripe.com/v3/"></script>
</head>
<body>
    <div class="container">
        <!-- 语言切换 -->
        <div class="language-switcher">
            <button class="lang-btn" data-lang="en">English</button>
            <button class="lang-btn" data-lang="zh">中文</button>
        </div>

        <!-- 主要内容 -->
        <div class="pricing-container">
            <h1 class="title"><%= i18n.t('purchase.upgradeTitle') %></h1>
            <p class="subtitle"><%= i18n.t('purchase.subtitle') %></p>

            <div class="pricing-cards">
                <!-- 月付方案 -->
                <div class="pricing-card">
                    <div class="card-header">
                        <h2><%= i18n.t('purchase.monthlyPlan') %></h2>
                        <div class="price">
                            <span class="amount">$9.99</span>
                            <span class="period"><%= i18n.t('purchase.perMonth') %></span>
                        </div>
                    </div>
                    <ul class="features">
                        <li><%= i18n.t('purchase.feature1') %></li>
                        <li><%= i18n.t('purchase.feature2') %></li>
                        <li><%= i18n.t('purchase.feature3') %></li>
                        <li><%= i18n.t('purchase.feature4') %></li>
                    </ul>
                    <button class="purchase-btn" data-plan-type="monthly">
                        <%= i18n.t('purchase.subscribe') %>
                    </button>
                </div>

                <!-- 年付方案 -->
                <div class="pricing-card popular">
                    <div class="popular-badge"><%= i18n.t('purchase.popular') %></div>
                    <div class="card-header">
                        <h2><%= i18n.t('purchase.yearlyPlan') %></h2>
                        <div class="price">
                            <span class="amount">$99.99</span>
                            <span class="period"><%= i18n.t('purchase.perYear') %></span>
                        </div>
                        <div class="saving"><%= i18n.t('purchase.saveText') %></div>
                    </div>
                    <ul class="features">
                        <li><%= i18n.t('purchase.feature1') %></li>
                        <li><%= i18n.t('purchase.feature2') %></li>
                        <li><%= i18n.t('purchase.feature3') %></li>
                        <li><%= i18n.t('purchase.feature4') %></li>
                        <li><%= i18n.t('purchase.yearlyBonus') %></li>
                    </ul>
                    <button class="purchase-btn primary" data-plan-type="yearly">
                        <%= i18n.t('purchase.subscribe') %>
                    </button>
                </div>
            </div>

            <!-- 支付信息 -->
            <div class="payment-info">
                <img src="/images/payment-methods.png" alt="Payment methods">
                <p class="secure-text"><%= i18n.t('purchase.securePayment') %></p>
            </div>

            <!-- 满意保证 -->
            <div class="guarantee">
                <img src="/images/guarantee.svg" alt="Money back guarantee">
                <p><%= i18n.t('purchase.guarantee') %></p>
            </div>
        </div>
    </div>

    <script>
        // 注入Stripe公钥和扩展ID
        window.STRIPE_PUBLISHABLE_KEY = '<%= stripePublicKey %>';
        window.EXTENSION_ID = '<%= extensionId %>';
    </script>
    <script src="/js/i18n.js"></script>
    <script src="/js/purchase.js"></script>
</body>
</html>